{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{'Email'|trans}}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{'FirstName'|trans}}</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>{{'LastName'|trans}}</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>{{'Role'|trans}}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            {# <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr> #}
            <tr>
                <th>{{'Orders'|trans}}</th>
                <td>
                    <ul>
                        {% for panier in user.paniers %}
                            {{ panier }}
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
    
    
    {% if app.user is not null and (is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN'))%}
        <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">{{'Edit'|trans}}</a>
    {% endif %}
    
    {% if app.user is not null and (is_granted('ROLE_SUPER_ADMIN')) %}
        {{ include('user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
