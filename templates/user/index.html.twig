{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{'Email'|trans}}</th>
                <th>{{'FirstName'|trans}}</th>
                <th>{{'LastName'|trans}}</th>
                <th>{{'Role'|trans}}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">{{'Show'|trans}}</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">{{'Edit'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{'user.NotFound'|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">{{'user.Create'|trans}}</a>
{% endblock %}
